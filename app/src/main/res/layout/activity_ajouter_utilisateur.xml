<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lancement"
    android:layout_width="match_parent"
    android:background="@color/colorBleuClair"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Création d'un utilisateur"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/editText_identifiant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Identifiant"
                android:inputType="text"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/editText_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom de l'utilisateur"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/editText_prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prénom de l'utilisateur"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/editText_password_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mot de passe"
                android:imeOptions="actionSend"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/editText_password_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirmez le mot de passe"
                android:imeOptions="actionSend"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton_classique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="Profil utilisateur classique"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorGrisClair"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton_administrateur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="Profil administrateur"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorGrisClair"
                android:textSize="20sp" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_ajouter_utilisateur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mybutton"
            android:padding="10dp"
            android:text="Ajouter l'utilisateur"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>
